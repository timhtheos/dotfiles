# My custom ncmpcpp bindings.
#

def_key "k"
  scroll_up

def_key "j"
  scroll_down

def_key "u"
  page_up

def_key "d"
  page_down

def_key "x"
  delete_playlist_items

def_key "l"
  next_screen

def_key "h"
  previous_screen

def_key "n"
  next

def_key "N"
  previous

def_key "L"
  show_lyrics

